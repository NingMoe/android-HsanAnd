<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    tools:context="com.hxsn.jwb.fragment.Ssk1Fragment"
    tools:ignore="HardcodedText">

    <ScrollView
        android:id="@+id/line_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hxsn.jwb.ui.MyGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numColumns="3"
                android:scrollbars="none"
                android:divider="@color/red"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp">

            </com.hxsn.jwb.ui.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:text="首页"/>

                <TextView
                    android:id="@+id/txt_pre"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:text="上一页"/>

                <TextView
                    android:id="@+id/txt_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="17sp"
                    android:text="曲线对比图"/>

                <TextView
                    android:id="@+id/txt_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:text="下一页"/>

                <TextView
                    android:id="@+id/txt_end"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:text="尾页"/>

            </LinearLayout>

            <WebView
                android:id="@+id/webView_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
