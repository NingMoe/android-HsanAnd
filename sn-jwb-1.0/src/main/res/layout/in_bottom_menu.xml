<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"

    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rb_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:button="@null"
            android:background="@drawable/bottom1_s"/>

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:textSize="10sp"
            android:textColor="@color/green_none"
            android:text="看鸡舍"/>

        <ImageView
            android:id="@+id/img_red_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/point_red"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rb_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:button="@null"
            android:background="@drawable/bottom2_n" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:text="农事汇"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rb_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:button="@null"
            android:background="@drawable/bottom3_n" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:textSize="10sp"
            android:textColor="@color/gray_dark"
            android:text="问专家"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rb_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:button="@null"
            android:background="@drawable/bottom4_n"/>

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:textSize="10sp"
            android:textColor="@color/gray_dark"
            android:text="农情站"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rb_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:button="@null"
            android:background="@drawable/bottom5_n" />

        <TextView
            android:id="@+id/txt_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:textSize="10sp"
            android:textColor="@color/gray_dark"
            android:text="我的"/>

    </RelativeLayout>


</RadioGroup>